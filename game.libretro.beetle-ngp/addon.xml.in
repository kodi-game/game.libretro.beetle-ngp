<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-ngp"
		name="Neo Geo Pocket/Color (Beetle NeoPop)"
		version="0.9.36"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>NGP</platforms>
		<extensions>ngp|ngc</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
		<supports_mouse>false</supports_mouse>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Neo Geo Pocket/Color (Beetle NeoPop) v0.9.36.1</summary>
		<description>Based on NeoPop, this emulator is not very accurate in terms of low-level details. However, it is sufficient to play most commercially released games fairly well.

Supported files: .ngp, .ngc</description>
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<assets>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
	</extension>
</addon>